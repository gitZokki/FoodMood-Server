{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig.json to read more about this file */
		"target": "ESNEXT",
		"module": "commonjs",
		"lib": [
			"ESNEXT"
		],
		"outDir": "dist",
		"allowJs": false,
		"removeComments": true,
		"strict": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true, // for json import
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		]
	}
}